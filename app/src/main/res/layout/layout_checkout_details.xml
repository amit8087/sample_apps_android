<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_6sdp"
        android:elevation="@dimen/_4sdp"
        android:padding="@dimen/_6sdp"
        android:paddingBottom="@dimen/_14sdp"
        app:cardCornerRadius="@dimen/_6sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:drawablePadding="@dimen/_10sdp"
                android:fontFamily="@font/poppins_medium"
                android:padding="@dimen/_10sdp"
                android:text="@string/str_robinsons_supermarket"
                android:textColor="@color/neutral_black"
                android:textSize="@dimen/_16ssp"
                app:drawableEndCompat="@drawable/ic_right_arrow"
                app:drawableStartCompat="@drawable/ic_shop"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_6sdp"
                app:cardElevation="@dimen/_6sdp"
                app:cardCornerRadius="@dimen/_6sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_header"
                app:strokeColor="@color/border_color"
                app:strokeWidth="1dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/_14sdp"
                    android:layout_marginEnd="@dimen/_14sdp">

                    <TextView
                        android:id="@+id/tv_delivery_schedule"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_12sdp"
                        android:drawablePadding="@dimen/_18sdp"
                        android:fontFamily="@font/poppins_medium"
                        android:text="Delivery Schedule"
                        android:textColor="@color/neutral_black"
                        android:textSize="@dimen/_14ssp"
                        app:drawableEndCompat="@drawable/ic_right_arrow_black"
                        app:layout_constraintBottom_toTopOf="@id/tv_date_time"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tv_date_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:drawablePadding="@dimen/_8sdp"
                        android:fontFamily="@font/poppins"
                        android:text="February 10,2022 | 9:00AM - 12:00PM"
                        android:textColor="@color/green_7"
                        android:textSize="@dimen/_14ssp"
                        app:drawableStartCompat="@drawable/ic_clock_circle"
                        app:layout_constraintTop_toBottomOf="@id/tv_delivery_schedule" />

                    <TextView
                        android:id="@+id/tv_deliver_other"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_14sdp"
                        android:fontFamily="@font/poppins"
                        android:text="Deliver to a different address?"
                        android:textColor="@color/neutral_black"
                        android:textSize="@dimen/_14ssp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_date_time" />

                    <androidx.appcompat.widget.SwitchCompat
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toEndOf="@id/tv_deliver_other"
                        app:layout_constraintTop_toBottomOf="@id/tv_date_time"
                        app:layout_constraintBaseline_toBaselineOf="@id/tv_deliver_other"/>


                    <View
                        android:id="@+id/divider_layout_1"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:background="@color/border_color"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_deliver_other" />


                    <TextView
                        android:id="@+id/tv_cart_summary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:text="Cart Summary"
                        android:textColor="@color/neutral_black"
                        android:textSize="@dimen/_14ssp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/divider_layout_1" />

                    <LinearLayout
                        android:id="@+id/ll_cart_count"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_cart_summary">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:drawablePadding="@dimen/_6sdp"
                            android:fontFamily="@font/poppins_semibold"
                            android:gravity="start"
                            android:text="3 Items"
                            android:textColor="@color/neutral_black"
                            android:textSize="@dimen/_14ssp"
                            app:drawableStartCompat="@drawable/ic_cart" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:fontFamily="@font/poppins"
                            android:gravity="end"
                            android:text="₱116.25"
                            android:textColor="@color/neutral_black"
                            android:textSize="@dimen/_14ssp" />
                    </LinearLayout>

                    <include
                        android:id="@+id/cl_product_details"
                        layout="@layout/layout_product_details"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/ll_cart_count"
                        app:layout_constraintBottom_toTopOf="@id/tv_view_details"/>

                    <TextView
                        android:id="@+id/tv_view_details"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_12sdp"
                        android:layout_marginBottom="@dimen/_12sdp"
                        android:fontFamily="@font/poppins"
                        android:gravity="center_horizontal"
                        android:text="View Details"
                        android:textColor="@color/green_6"
                        android:textSize="@dimen/_14ssp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/cl_product_details" />

                    <View
                        android:id="@+id/divider_layout_2"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:background="@color/border_color"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_view_details" />

                    <LinearLayout
                        android:id="@+id/ll_concierge_fee"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:orientation="horizontal"
                        android:weightSum="2"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/divider_layout_2">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/poppins_medium"
                            android:gravity="start"
                            android:text="concierge Fee"
                            android:textColor="@color/neutral_black" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/poppins"
                            android:gravity="end"
                            android:text="₱100.00"
                            android:textColor="@color/neutral_black" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_delivery_fee"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:orientation="horizontal"
                        android:weightSum="2"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/ll_concierge_fee">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/poppins_medium"
                            android:gravity="start"
                            android:text="Delivery Fee"
                            android:textColor="@color/neutral_black" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/poppins"
                            android:gravity="end"
                            android:text="₱100.00"
                            android:textColor="@color/neutral_black" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_rsc_free"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:orientation="horizontal"
                        android:weightSum="3"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/ll_delivery_fee">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/poppins_medium"
                            android:gravity="start"
                            android:text="RSC Free Delivery Voucher"
                            android:textColor="@color/neutral_black" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:fontFamily="@font/poppins"
                            android:gravity="end"
                            android:text="-₱100.00"
                            android:textColor="@color/functional_red" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_p50_off"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:orientation="horizontal"
                        android:weightSum="3"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/ll_rsc_free">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/poppins_medium"
                            android:gravity="start"
                            android:text="P50OFF Voucher"
                            android:textColor="@color/neutral_black" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:fontFamily="@font/poppins"
                            android:gravity="end"
                            android:text="-₱100.00"
                            android:textColor="@color/functional_red" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_total_due"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:orientation="horizontal"
                        android:weightSum="2"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/ll_p50_off">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/poppins_bold"
                            android:gravity="start"
                            android:text="Total Due"
                            android:textColor="@color/neutral_black"
                            android:textSize="@dimen/_16ssp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/poppins_bold"
                            android:gravity="end"
                            android:text="₱4,700.00"
                            android:textColor="@color/neutral_black"
                            android:textSize="@dimen/_16ssp" />
                    </LinearLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>