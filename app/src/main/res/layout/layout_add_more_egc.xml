<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/CustomCardViewStyle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_14sdp"
            android:layout_marginEnd="@dimen/_14sdp">

            <TextView
                android:id="@+id/tv_add_more_egc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add More eGC Creadits"
                android:fontFamily="@font/poppins_semibold"
                android:textSize="@dimen/_12ssp"
                android:layout_marginTop="@dimen/_14sdp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:drawableEndCompat="@drawable/ic_close_button" />

            <View
                android:id="@+id/divider_layout_1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/border_color"
                android:layout_marginTop="@dimen/_16sdp"
                app:layout_constraintTop_toBottomOf="@id/tv_add_more_egc"/>

            <TextView
                android:id="@+id/tv_add_payment_method"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/divider_layout_1"
                app:layout_constraintStart_toStartOf="parent"
                android:gravity="center_vertical"
                android:text="Add payment method"
                android:fontFamily="@font/poppins"
                android:textColor="@color/green_6"
                android:layout_marginStart="@dimen/_6sdp"
                android:layout_marginTop="@dimen/_18sdp"
                android:layout_marginEnd="@dimen/_8sdp"
                android:drawablePadding="@dimen/_6sdp"
                app:drawableStartCompat="@drawable/ic_payment_channels"
                app:drawableEndCompat="@drawable/ic_right_arrow_black" />

            <View
                android:id="@+id/divider_layout_2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/border_color"
                android:layout_marginTop="@dimen/_6sdp"
                app:layout_constraintTop_toBottomOf="@id/tv_add_payment_method"/>

            <TextView
                android:id="@+id/tv_enter_amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/divider_layout_2"
                app:layout_constraintStart_toStartOf="parent"
                android:text="Enter Amount"
                android:layout_marginStart="@dimen/_6sdp"
                android:layout_marginTop="@dimen/_30sdp"
                android:fontFamily="@font/poppins_bold"
                android:textColor="@color/neutral_black_25"
                android:textSize="@dimen/_18ssp"/>

            <TextView
                android:id="@+id/tv_current_balance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Current balance: â‚±4000.00"
                android:textColor="@color/black"
                android:textSize="@dimen/_11ssp"
                android:fontFamily="@font/poppins"
                android:layout_marginTop="@dimen/_8sdp"
                app:layout_constraintTop_toBottomOf="@id/tv_enter_amount"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/tv_egc_denominations"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="or select from GoCart eGC denominations"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins"
                android:textSize="@dimen/_11ssp"
                android:layout_marginTop="@dimen/_20sdp"
                app:layout_constraintTop_toBottomOf="@id/tv_current_balance"
                app:layout_constraintStart_toStartOf="parent"/>

            <ImageView
                android:id="@+id/tv_card_100"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_card_100"
                android:layout_marginTop="@dimen/_6sdp"
                app:layout_constraintTop_toBottomOf="@id/tv_egc_denominations"
                app:layout_constraintStart_toStartOf="parent"/>

            <ImageView
                android:id="@+id/tv_card_500"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_card_500"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_6sdp"
                app:layout_constraintTop_toBottomOf="@id/tv_egc_denominations"
                app:layout_constraintStart_toEndOf="@id/tv_card_100"/>

            <ImageView
                android:id="@+id/tv_card_1000"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_card_1000"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_6sdp"
                app:layout_constraintTop_toBottomOf="@id/tv_egc_denominations"
                app:layout_constraintStart_toEndOf="@id/tv_card_500"/>

            <com.google.android.material.button.MaterialButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_38sdp"
                android:layout_marginBottom="@dimen/_12sdp"
                app:cornerRadius="@dimen/_18sdp"
                android:backgroundTint="@color/green_6"
                android:text="Next"
                android:textAllCaps="false"
                android:fontFamily="@font/poppins"
                android:textColor="@color/white"
                app:layout_constraintTop_toBottomOf="@id/tv_card_1000"
                app:layout_constraintStart_toStartOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>

